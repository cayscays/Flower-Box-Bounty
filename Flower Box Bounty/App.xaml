<Application x:Class="Flower_Box_Bounty.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Flower_Box_Bounty"
             StartupUri="presentation layer/view/WelcomeView.xaml">
    <Application.Resources>
        <Style TargetType="Window">
            <Setter Property="Title" Value="Flower Box Bounty" />
            <Setter Property="Background" >
                <Setter.Value>
                    <ImageBrush TileMode="Tile" ImageSource="/presentation layer/view/resources/Background.png" Opacity="1" Stretch="None">
                        <ImageBrush.ViewboxUnits>
                            <BrushMappingMode>RelativeToBoundingBox</BrushMappingMode>
                        </ImageBrush.ViewboxUnits>
                    </ImageBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="WindowState" Value="Maximized"/>
            <Setter Property="ResizeMode" Value="NoResize" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="LightGreen" />
            <Setter Property="Width" Value="120" />
            <Setter Property="Height" Value="45" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="FontSize" Value="20" />
        </Style>

    </Application.Resources>
</Application>
