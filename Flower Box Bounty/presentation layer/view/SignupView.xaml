<Window x:Class="View.SignupView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Style="{StaticResource {x:Type Window}}" >
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Label Content="Username" HorizontalAlignment="Center" Margin="5" FontSize="22" />
            <TextBox x:Name="txtNewUsername" Width="200" HorizontalAlignment="Center" Margin="5" FontSize="18" />
            <Label Content="Password" HorizontalAlignment="Center" Margin="5" FontSize="24" />
            <PasswordBox x:Name="txtNewPassword" Width="200" HorizontalAlignment="Center" Margin="5" FontSize="18" />
            <Label Content="Password Confirmation" HorizontalAlignment="Center" Margin="5" FontSize="22" />
            <PasswordBox x:Name="txtNewPasswordConfirmation" Width="200" HorizontalAlignment="Center" Margin="5,5,5,20" FontSize="18" />
            <Button Content="Sign Up" Click="Signup_Click" HorizontalAlignment="Center" Margin="5" />
            <Button Content="Back" Click="Back_Click" HorizontalAlignment="Center" Margin="5" />

        </StackPanel>
    </Grid>
</Window>
