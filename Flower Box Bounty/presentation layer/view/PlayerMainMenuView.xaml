<Window x:Class="View.PlayerMainMenuView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:system="clr-namespace:System;assembly=System.Runtime"
        Style="{StaticResource {x:Type Window}}">
    <Grid>
        <StackPanel VerticalAlignment="Center">

            <Label x:Name="WelcomePlayer" Content="{Binding WelcomeUser}" HorizontalAlignment="Center" FontSize="20" Margin="5"/>

            <Button Content="Play" Click="Play_Click" HorizontalAlignment="Center" Margin="5" />
            <Button Content="Leaderboard" Click="Leaderboard_Click" HorizontalAlignment="Center" Margin="5" />
            <Button Content="Help" Click="Help_Click" HorizontalAlignment="Center" Margin="5" />
            <Button Content="Logout" Click="Logout_Click" HorizontalAlignment="Center" Margin="5" />
        </StackPanel>
    </Grid>
</Window>
